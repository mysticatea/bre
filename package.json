{
  "name": "bre",
  "version": "0.0.0",
  "description": "A Binary-Object Mapper for Note.js",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.9.0",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.11",
    "eslint": "^3.0.1",
    "eslint-config-mysticatea": "^5.0.0",
    "iconv-lite": "^0.4.13",
    "jsdoc": "^3.4.0",
    "mocha": "^2.5.3",
    "nyc": "^7.0.0",
    "opener": "^1.4.1",
    "power-assert": "^1.4.1",
    "rimraf": "^2.5.3",
    "safe-buffer": "^5.0.1",
    "wait-on": "^1.5.2"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "clean": "rimraf .nyc_output coverage docs",
    "lint": "eslint lib test",
    "docs": "jsdoc -c .jsdocrc.json",
    "pretest": "npm run lint",
    "test": "nyc --require babel-register -- mocha \"test/**/*.js\"",
    "watch": "run-p watch:*",
    "watch:test": "chokidar lib test --initial --command \"npm test && nyc report --reporter=lcov\"",
    "watch:coverage": "wait-on ./coverage/lcov-report/index.html && opener ./coverage/lcov-report/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mysticatea/bre.git"
  },
  "keywords": [
    "object",
    "record",
    "binary",
    "buffer",
    "mapper",
    "wrapper",
    "view",
    "accessor",
    "read",
    "write",
    "serialize",
    "deserialize",
    "save",
    "store"
  ],
  "author": "Toru Nagashima",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mysticatea/bre/issues"
  },
  "homepage": "https://github.com/mysticatea/bre#readme"
}
